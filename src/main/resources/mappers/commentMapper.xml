<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.marondal.choongmotour.lodging.comment.dao.CommentDAO">
  
  <!-- 댓글 달기 -->
  <insert id ="insertComment" parameterType="map">
  	INSERT INTO
  			`comment`
  			(
  				`userId`
  				, `lodgingId`
  				, `size`
  				, `content`
  				, `imagePath`
  				, `starpoint`
  				, `createdAt`
  				, `updatedAt`
  			)
  			VALUES
  			(
  				#{userId}
  				, #{lodgingId}
  				, #{size}
  				, #{content}
  				, #{imagePath}
  				, #{starpoint}
  				, now()
  				, now()
  			
  			);
  			
  
  </insert>
  
  <!-- 댓글 목록 -->
  <select id = "selectCommentList" resultType="com.marondal.choongmotour.lodging.model.Comment" parameterType="map">
  	SELECT
  		 `id`
  		, `userId`
  		, `lodgingId`
  		, `size`
  		, `content`
  		, `imagePath`
  		, `starpoint`
  		, `createdAt`
  	FROM
  		`comment`
  	WHERE
  		`lodgingId` = #{lodgingId}
  	ORDER BY
  		`id` DESC; <!-- 최근 업로드한 순서대로 -->
  </select>
  
  <!-- 댓글 한행 조회 -->  
  <select id = "selectComment" resultType="com.marondal.choongmotour.lodging.model.Comment" parameterType="int">
  	SELECT
  		`id`
  		, `userId`
  		, `lodgingId`
  		, `size`
  		, `content`
  		, `imagePath`
  		, `starpoint`
  	FROM
  		`comment`
  	WHERE
  		`id` = #{id}
  		AND
  		`userId` = #{userId};
  </select>
  
  <!-- 댓글 삭제 -->
  <delete id = "deleteComment" parameterType="int">
  
  	DELETE 
  	FROM
  		`comment`
  	WHERE
		`id` = #{id}
		AND
		`userId` = #{userId};
  </delete>
  
  <!-- 댓글 개수 -->
  <select id ="selectCommentCount" parameterType="int" resultType="Integer">
	SELECT
	  count(*) AS `commentCount`
	FROM
	  `comment`
	WHERE
	  	`lodgingId` = #{lodgingId}

  </select>


  <!-- 댓글 평균평점 -->
	<select id = "selectStarPoint" parameterType="int" resultType="double">
		SELECT
			AVG(`starpoint`) AS `avgStarPoint`
		FROM
			`comment`
		WHERE
			`lodgingId` = #{lodgingId}

	</select>


  </mapper>