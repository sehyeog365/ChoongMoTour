<?xml version="1.0" encoding="UTF-8"?>
 
 <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


 <mapper namespace="com.marondal.choongmotour.lodging.reserve.dao.ReserveDAO">
 

 
 
 <!-- 예약하기 -->
 
  	<insert id = "insertReserve" parameterType="map">
  	INSERT INTO
  			`reserved_list`
  	(
  		`userId`
  		, `roomId`
  		, `reserveDate`
  		, `createdAt`
  		, `updatedAt`
  	) 
  		VALUES
  	(
  		#{userId}
  		,#{roomId}
  		,#{reserveDate}
  		, now()
  		, now()
  	
  	);
  			
  	
  	</insert>
  	
  
  <!-- 예약 목록 -->	
  <!-- 이제보니 이것도 안해놔서 때로는 오류가 뜬다. -->
  <select id ="selectReserveList" resultType="com.marondal.choongmotour.lodging.reserve.dao.ReserveDAO" parameterType="int">
  	SELECT
  		`id`
  		`name`
  		`phoneNumber`
  		`roomName`
  		`size`
  		`price`
  		`imagePath`
  	FROM
  		`reserved_list`
  	WHERE
  		`id`= #{id};
  </select>
  
  <!-- 예약정보 한행 조회 -->
  <select id = "selectReservebyId" resultType="com.marondal.choongmotour.lodging.reserve.dao.ReserveDAO" parameterType="int">
   SELECT
   		`id`
  		`name`
  		`phoneNumber`
  		`roomName`
  		`size`
  		`price`
  		`imagePath`
   FROM
   		`reserved_list`
   WHERE
   	`id` = #{id};
  
  </select>
  
  <!-- 예약 취소 -->
  <delete id = "deleteReserve" parameterType="int">
  DELETE
  FROM	`reserved_list`
  WHERE `id` =#{id};
  
  
  </delete>
 
 
 
 
 
 
 
 </mapper>
